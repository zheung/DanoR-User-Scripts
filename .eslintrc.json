{
	"env": {
		"browser": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [ 1, "tab" ],
		"quotes": [ 2, "single" ],
		"semi": [ 2, "always" ],
		"linebreak-style": [ 2, "windows" ],
		"no-unused-vars": [ 1, { "vars": "all", "args": "after-used" } ],
		"no-shadow": [ 1 ],
		"no-redeclare": [ 1 ],
		"no-unused-expressions": [ 2 ],
		"no-console": [ 0 ],
		"no-extra-boolean-cast": [ 0 ]
	},
	"globals": {
		"$": true,
		"GM_getValue": true,
		"GM_setValue": true,
		"GM_addStyle": true
	}
}